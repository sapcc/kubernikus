{
  "plugin": "custom",
  "pluginConfig": {
    "invoke_interval": "30s",
    "timeout": "5s",
    "max_output_length": 80,
    "concurrency": 3
  },
  "source": "ntp-custom-plugin-monitor",
  "conditions": [
    {
      "type": "KubernikusTunnelStatus",
      "reason": "TunnelIsUP",
      "message": "tunnel is up"
    }
  ],
  "rules": [
    {
      "type": "temporary",
      "reason": "TunnelIsDown",
      "path": "/config/check_tunnel.sh",
      "timeout": "3s"
    },
    {
      "type": "permanent",
      "condition": "KubernikusTunnelStatus",
      "reason": "TunnelIsDown",
      "path": "/config/check_tunnel.sh",
      "timeout": "3s"
    }
  ]
}
