FROM keppel.eu-de-1.cloud.sap/ccloud-dockerhub-mirror/library/golang:1.18-alpine3.15 as builder
RUN apk add --no-cache make git curl bash gcc musl-dev
WORKDIR /app
RUN curl -sSfL https://raw.githubusercontent.com/golangci/golangci-lint/master/install.sh | sh -s -- -b $(go env GOPATH)/bin v1.50.0
COPY . .
ENV GOARCH=amd64
ARG VERSION
#We run linter before compiling for faster feedback
RUN make linters
RUN make all
RUN make gotest
RUN make build-e2e

FROM scratch as kubernikus-binaries
COPY --from=builder /app/bin/linux/* /
